{{set-body-class "full-item-view"}}
<header class="item-header-title position-relative">
  <div class="py-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-6">
          {{#link-to "page" linkUrl}}
            <h1 class="display-3 text-white mb-0">{{_page_Title.firstObject.title}}</h1>
          {{/link-to}}
        </div>
      </div>
    </div>
  </div>
</header>
<section id="full-item-view-content" class="my-5 py-5">
  <div class="container">
    {{#each fullItemViewContent as |fullItem|}}
      <div class="row">
        <div class="col-md-6">
          <div class="post-full-item-image position-relative">
            {{posts/full-item-view-bg-img
              class="full-item background-image"
              imageUrl=fullItem.image
            }}
          </div>
        </div>
        <div class="col-md-6">
          <h2>{{fullItem.title}}</h2>
          <div class="lead">{{fullItem.paragraphLead}}</div>
        </div>
      </div>
      <div class="row">
        <div class="col blog-fullwidth-content py-4">
          {{fullItem.content}}
        </div>
      </div>
    {{/each}}
  </div>
</section>
{{yield}}
