= bs-modal [
  open=open
  size="lg"
  onHidden=onHidden
] as |modal|
  = modal.header
    div
      h2.modal-title SQL Introduction Course
      p Please complete the booking form with your requirements. We will get back to you to confirm your booking.
  = modal.body
    = bs-form [
      formLayout="vertical"
      model=lead
      onSubmit=(action "submit")
    ] as |form|
      .form-row
        .from-group.col-md-6
          = form.element [
            placeholder="Your Name*"
            property="name"
            customError=(map-by "message" lead.errors.name)
          ]
        .from-group.col-md-6
          = form.element [
            placeholder="Number of Delegates"
            property="bookingDelegateAmount"
            customError=(map-by "message" lead.errors.bookingDelegateAmount)
          ]
      .form-row
        .from-group.col-md-6
          = form.element [
            placeholder="Email*"
            property="email"
            customError=(map-by "message" lead.errors.email)
          ]
        .from-group.col-md-6
          = form.element [
            placeholder="Delegate Names"
            property="bookingDelegateNames"
          ]
      .form-row
        .from-group.col-md-6
          = form.element [
            placeholder="Company"
            property="accountName"
          ]
        .from-group.col-md-6
          = form.element [
            disabled="true"
            placeholder=dateVenue
            property="bookingDateVenue"
          ]
      .form-row
        .from-group.col-md-6
          = form.element [
            placeholder="Phone*"
            property="phone"
            customError=(map-by "message" lead.errors.phone)
          ]
        .from-group.col-md-6
          = form.element [
            disabled="true"
            placeholder="Â£ 595.00 - Price (ex VAT)"
            property="bookingPrice"
          ]
      .form-row
        .from-group.col-md-12
          = form.element [
            placeholder="Message"
            property="message"
            controlType="textarea"
          ]
      = bs-button [
        defaultText="Submit to Systematix"
        type="primary"
        class="btn-white-hover btn-orange float-right"
        buttonType="submit"
      ]
