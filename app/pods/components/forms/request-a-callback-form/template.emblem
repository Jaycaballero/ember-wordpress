.col
  .request-a-call-back-form.px-4.pt-4.pb-2
    h2.mb-3 Request a Callback
    = bs-form [
      formLayout="vertical"
      model=this
      onSubmit=(action "submit")
    ] as |form|
      .form-group.mb-2
        = form.element [
         id="name"
         placeholder="Name*"
        ]
      .form-group.mb-2
        = form.element [
         id="phone"
         placeholder="Phone Number*"
        ]
      .form-group.mb-2
        = form.element [
         id="email"
         placeholder="Email Address*"
        ]
      .form-group
        = form.element [
         id="message"
         controlType="textarea"
         placeholder="Your Message"
        ]
      .form-group
        = bs-button [
          defaultText="Submit"
          type="primary"
          buttonType="submit"
          class="btn-white-hover col submit-button"
        ]
