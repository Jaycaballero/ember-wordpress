.col.px-0
  .get-in-touch-form.px-4.pt-4.pb-2
    h2.mb-3 Get in touch
    p
      | If you need any more info, send up a message using this form.
      br
      | We will get back to you within 1 to 2 working hours.
    = bs-form [
      formLayout="vertical"
      model=this
      onSubmit=(action "submit")
    ] as |form|
      .form-row
        .form-group.col-md-6.pr-1.mb-2
          = form.element [
            id="name"
            placeholder="Name*"
            property="name"
          ]
        .form-group.col-md-6.pr-1.mb-2
          = form.element [
            id="phone"
            placeholder="Phone Number*"
            property="phone"
          ]
      .form-row
        .form-group.col-md-6.pr-1.mb-2
          = form.element [
            id="email"
            placeholder="Email Address*"
            property="email"
          ]
        .form-group.col-md-6.pr-1.mb-2
          = form.element [
            id="company"
            placeholder="Company"
            property="company"
          ]
      .form-group
        = form.element [
          id="message"
          controlType="textarea"
          placeholder="Your Message"
          property="message"
        ]
      = bs-button [
        defaultText="Get in Touch"
        type="primary"
        buttonType="submit"
        class="btn-white-hover col submit-button mb-2"
      ]

