<div class="col">
  <div class="get-started-form px-4 pt-4 pb-2">
    <h2 class="mb-3">Get Started</h2>
    <form class="mt-2">
      <div class="form-group mb-2">
        {{input
          id="name"
          placeholder="Name*"
          class="form-control form-control-lg"
        }}
      </div>
      <div class="form-group mb-2">
        {{input
          id="phoneNumber"
          placeholder="Phone Number*"
          class="form-control form-control-lg"
        }}
      </div>
      <div class="form-group mb-2">
        {{input
          id="email"
          placeholder="Email Address"
          class="form-control form-control-lg"
        }}
      </div>
      <div class="form-group">
        {{textarea
          id="message"
          placeholder="Your Message"
          rows="5"
          class="form-control form-control-lg"
        }}
      </div>
      <div class="form-group">
        <button
          type="submit"
          class="btn btn-primary btn-white-hover col submit-button"
        >
          Submit
        </button>
      </div>
    </form>
  </div>
</div>
{{yield}}
