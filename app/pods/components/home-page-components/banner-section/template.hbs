<header class="position-relative">
  {{#each _banners as |bannerITem|}}
    {{#home-page-components/background-image
      class="business-header"
      url=bannerITem.better_featured_image.source_url
    }}
      <div class="banner-content position-absolute">
        <div class="container">
          <div class="row">
            <div class="col-lg-12">
              <h1 class="display-3 text-center text-white">{{bannerITem.title}}</h1>
              <div class="pre-text text-center mt-4">
                {{compute (action "content") bannerITem}}
                <div class="call-to-action text-center">
                  <a href={{newLink}} class="btn btn-primary mt-4 btn-white-hover"role="button">
                    {{bannerITem.acf.call_to_action_link.title}}
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    {{/home-page-components/background-image}}
  {{/each}}
</header>
{{yield}}
