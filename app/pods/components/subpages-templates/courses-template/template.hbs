{{set-body-class "courses"}}
<header class="subpage-header position-relative">
  <div class="subpage-header py-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-6">
          <h1 class="display-3 text-white mb-0">{{_courses_Template.firstObject.title}}</h1>
          <div class="pre-text">
            <p>{{_courses_Template.firstObject.acf.header_sub_text}}</p>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="header-call-to-action position-absolute">
            {{#each newLink as |callToAction|}}
              <a
                class="btn btn-primary btn-white-hover"
                href={{callToAction.link}}
                role="button"
              >
                {{callToAction.linkTitle}}
              </a>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
<section id="subpage-content" class="courses pt-5 pb-5">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <h3 class="select-categories">Select Categories</h3>
        <form class="mt-4 categories-selection">
          {{#each _categories as |selectCategory|}}
            <div class="form-row">
              <div class="form-group col mb-0">
                <label class="checkbox position-relative d-block">
                  {{input
                    type="checkbox"
                  }}
                  <span class="checkmark"></span>
                  <span class="select-category-title">{{selectCategory.title}}</span>
                </label>
              </div>
            </div>
          {{/each}}
        </form>
      </div>
      <div class="col-md-8">
        <div class="row equal-heights m-0">
          {{#each _categories as |category|}}
            <div class="col-md-6 float-left mb-4 p-0">
              <div class="card">
                <div class="card-body p-4">
                  <div class="course-category-image">
                    {{#if category.iconUrl}}
                      <img src={{category.iconUrl}} alt="image">
                    {{/if}}
                    {{#link-to
                      "course"
                      category.slug
                      class="course-cat-button d-inline-flex ml-2"
                    }}
                      <h3 class="course-category-title mb-4">{{category.title}}</h3>
                    {{/link-to}}
                  </div>
                  <ul class="course-sub-category-listing">
                    {{#each category.subCategories as |subCategory|}}
                      <li>
                        {{#link-to
                          "course.sub-category"
                          category.slug
                          subCategory.slug
                        }}
                          <div class="course-subCategory-title">{{subCategory.title}}</div>
                        {{/link-to}}
                        <div class="course-sub-category-introtext">{{subCategory.introtext}}</div>
                      </li>
                    {{/each}}
                  </ul>
                  <div class="course-category-button card-footer px-0">
                    {{#link-to
                      "course"
                      category.slug
                      class="btn btn-primary text-capitalized mb-1"
                    }}
                      View more
                    {{/link-to}}
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</section>
{{yield}}
