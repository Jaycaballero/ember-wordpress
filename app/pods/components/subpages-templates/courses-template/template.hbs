{{set-body-class "courses"}}
<header class="subpage-header position-relative">
  <div class="subpage-header py-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-6">
          <h1 class="display-3 text-white mb-0">{{_courses_Template.firstObject.title}}</h1>
          <div class="pre-text">
            <p>{{_courses_Template.firstObject.acf.header_sub_text}}</p>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="header-call-to-action position-absolute">
            {{#each newLink as |callToAction|}}
              <a
                class="btn btn-primary btn-white-hover"
                href={{callToAction.link}}
                role="button"
              >
                {{callToAction.linkTitle}}
              </a>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
<section id="subpage-content" class="courses pt-5 pb-5">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="row equal-heights m-0">
          {{#each _categories as |category|}}
            <div class="col-md-4 p-0 float-left mb-4 position-relative">
              <div class="card">
                <div class="card-body p-0">
                  {{#link-to
                    "course"
                    category.slug
                    class="course-cat-button"
                  }}
                    <h3 class="course-category-title mb-3">{{category.title}}</h3>
                  {{/link-to}}
                  <ul class="course-sub-category-listing p-4">
                    {{#each category.subCategories as |subCategory|}}
                      <li class="position-relative">
                        {{#link-to
                          "course.sub-category"
                          category.slug
                          subCategory.slug
                        }}
                        <div class="cat-title-and-icon">
                          <img class="courses-icon" src="/images/course-sm-image.jpeg" alt="image">
                          <div class="course-subCategory-title">{{subCategory.title}}</div>
                        </div>
                        {{/link-to}}
                        <div class="course-sub-category-introtext">{{subCategory.introtext}}</div>
                      </li>
                    {{/each}}
                  </ul>
                </div>
              </div>
              <div class="course-category-button pb-4 px-4">
                {{#link-to
                  "course"
                  category.slug
                  class="btn btn-primary text-capitalized mb-1"
                }}
                  View more
                {{/link-to}}
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</section>
{{yield}}
