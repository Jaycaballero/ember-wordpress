{{set-body-class "sub-category courses"}}
<header class="course-header-banner">
  {{#if subCategory.bannerImageUrl}}
    {{#components/courses-background-image
      class="course-banner-image"
      imageUrl=subCategory.bannerImageUrl
    }}
      {{#course-outline/sub-category-header
        catTitle=category.title
        headerSubCatTitle=subCategory.title
      }}
      {{/course-outline/sub-category-header}}
    {{/components/courses-background-image}}
  {{else if subCategory.categories.firstObject.bannerImageUrl}}
    {{#components/courses-background-image
      class="course-banner-image"
      imageUrl=subCategory.categories.firstObject.bannerImageUrl
    }}
      {{#course-outline/sub-category-header
        catTitle=category.title
        headerSubCatTitle=subCategory.title
      }}
      {{/course-outline/sub-category-header}}
    {{/components/courses-background-image}}
  {{/if}}
</header>
<section id="scroll-menus" class="py-4">
  <div class="container">
    <div class="row">
      <div class="col">
        {{components/skill-page/subcat-menu-items}}
      </div>
    </div>
  </div>
</section>
<section id="course-sub-category">
  <div class="container py-5">
    <div class="row">
      <div class="col course-subcategory-content">
        {{components/skill-page/subcat-course-group}}
      </div>
    </div>
  </div>
</section>
<section id="why-choose">
  <div class="container pt-5">
    <div class="my-5">
      <div class="row">
        <div class="col-6">
          <div class="why-chooose">
            <h1 class="mb-3">Why Choose</h1>
            <div class="logo mb-3">
              <img src="/images/systematix-logo2.png" alt="image" />
            </div>
            <div class="rating mb-3">
              <img src="/assets/images/stars.png" alt="image" />
            </div>
            <div class="reviews">4.7 Goole Reviews, <a href="#">view all</a></div>
          </div>
        </div>
        <div class="col-6">
          {{components/testimonials/subcat-testimonials}}
        </div>
      </div>
      <div class="row">
        <div class="col py-5">
          {{components/skill-page/subcat-whychoose}}
        </div>
      </div>
    </div>
  </div>
</section>
<section id="subCat-ourLocations">
  <div class="container py-5">
    <div class="row">
      <div class="col">
        <h1 class="text-center">Our Locations</h1>
        <div class="text-center"><p>We cover a wide range of locations and could be on your door stop.</p></div>
        {{components/skill-page/subcat-our-locations}}
      </div>
    </div>
  </div>
</section>
<section id="more-information">
  <div class="container py-5">
    <div class="row">
      <div class="col py-5">
        <h1>Looking for more information?</h1>
        <ul class="moreInformation-lists p-0 d-table w-100 mt-4">
          <li>What is Excel?</li>
          <li>The Benefits of Excel</li>
          <li>How do I book an Excel course?</li>
          <li>Job roles that use Excel</li>
        </ul>
      </div>
    </div>
  </div>
</section>
<section id="request-callback">
<div class="container py-5">
  <div class="row py-5">
    <div class="col-6 pr-5">
      <h1>Request a call back</h1>
      <div id="subCat-callbackForm">
        {{forms/get-started-form}}
      </div>
    </div>
    <div class="col-6 pl-5">
      <h1>Or get in touch:</h1>
      <p>Our team are always at hand to help with your training needs.</p>
      <div class="phone mb-3">
        <i class="fas fa-phone mr-3"></i> 0118 324 3000
      </div>
      <div class="email">
        <i class="fas fa-envelope mr-3"></i>
        <a href="mailto:request@systematix.co.uk">request@systematix.co.uk</a>
      </div>
    </div>
  </div>
</div>
</section>
