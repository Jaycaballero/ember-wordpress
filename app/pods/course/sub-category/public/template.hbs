{{outlet}}
{{set-body-class "public-sql-course"}}
{{#each publicSqlCourseContent as |contentItems|}}
  <header class="public-sql-course-banner">
    <div class="py-5">
      <div class="container position-relative">
        <div class="row">
          <div class="col-6 header-text-content">
            {{contentItems.defaultEditor}}
          </div>
          <div class="col-6 bookingForm-container">
            <h4 class="text-right text-white mb-3">2 Day Course</h4>
            {{forms/booking-form}}
          </div>
        </div>
      </div>
    </div>
  </header>
  <section id="courseOutline-link">
    <div class="container py-4">
      <div class="row">
        <div class="col">
          <a href="javascript:void(0)" class="btn btn-primary btn-large course-outline w-25" role="button">Course Outline</a>
        </div>
      </div>
    </div>
  </section>
  <section id="branding-logo" class="py-5">
    <div class="container">
      <div class="row">
        <div class="col">
          <div class="branding-logos my-5 d-table">
            {{contentItems.sliderBranding}}
          </div>
        </div>
      </div>
    </div>
  </section>
  <section id="our-course-benefits" class="py-5">
    <div class="container">
      <div class="row">
        <div class="col">
          <div class="course-benefits d-table w-100">
            <h2 class="text-center mb-5">Our Course Benefits</h2>
              {{contentItems.courseBenefits}}
          </div>
        </div>
      </div>
    </div>
  </section>
  <section id="our-training-centres" class="py-5">
    <div class="container">
      <div class="row">
        <div class="col">
          <div class="reading-training-center d-table m-auto">
            <h2 class="text-center mb-5">Our Reading Training Center</h2>
              {{contentItems.trainingCenter}}
          </div>
        </div>
      </div>
    </div>
  </section>
  <section id="map-section">
    {{contentItems.map}}
  </section>
  <section id="gallery" class="py-5">
    <div class="container">
      <div class="row">
        <div class="col">
          <div class="gallery">
            {{contentItems.gallery}}
          </div>
        </div>
      </div>
    </div>
  </section>
  <section id="course-outline" class="py-5">
    <div class="container">
      <div class="row">
        <div class="course-outline">
          <div class="col-10">
            <h2 class="mb-5">Course Outline</h2>
            {{contentItems.courseOutline}}
          </div>
          <div class="col-2">
            <a href="#" class="btn btn-primary btn-large course-outline" target="_blank" rel="noopener">
              <i class="fas fa-file-pdf mr-3"></i>
              PDF Outline
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
{{/each}}
